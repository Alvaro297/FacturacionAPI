@model IEnumerable<Facturacion.Models.Entities.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4><i class="fas fa-users"></i> Gestión de Clientes</h4>
                        <a asp-action="Create" class="btn btn-success">
                            <i class="fas fa-plus"></i> Nuevo Cliente
                        </a>
                    </div>
                    
                    <!-- Controles de filtrado y ordenamiento -->
                    <form method="get" class="row g-3">
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                                <input type="text" name="searchTerm" value="@ViewBag.CurrentFilter" 
                                       class="form-control" placeholder="Buscar por nombre, email, NIF/CIF...">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <select name="sortBy" class="form-select">
                                <option value="">Ordenar por...</option>
                                <option value="nombre" selected="@(ViewBag.CurrentSort == "nombre")">Nombre</option>
                                <option value="apellido" selected="@(ViewBag.CurrentSort == "apellido")">Apellido</option>
                                <option value="email" selected="@(ViewBag.CurrentSort == "email")">Email</option>
                                <option value="nif" selected="@(ViewBag.CurrentSort == "nif")">NIF</option>
                                <option value="cif" selected="@(ViewBag.CurrentSort == "cif")">CIF</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <select name="sortOrder" class="form-select">
                                <option value="asc" selected="@(ViewBag.CurrentOrder != "desc")">Ascendente</option>
                                <option value="desc" selected="@(ViewBag.CurrentOrder == "desc")">Descendente</option>
                            </select>
                        </div>
                        <div class="col-md-1">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-filter"></i>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No hay clientes registrados</h5>
                            <p class="text-muted">Comience agregando su primer cliente.</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Crear Primer Cliente
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Nombre Completo</th>
                                        <th>NIF/CIF</th>
                                        <th>Email</th>
                                        <th>Teléfono</th>
                                        <th class="text-center">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@Html.DisplayFor(modelItem => item.Nombre) @Html.DisplayFor(modelItem => item.Apellido)</strong>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.NIF))
                                                {
                                                    <span class="badge bg-primary">NIF: @Html.DisplayFor(modelItem => item.NIF)</span>
                                                }
                                                @if (!string.IsNullOrEmpty(item.CIF))
                                                {
                                                    <span class="badge bg-info">CIF: @Html.DisplayFor(modelItem => item.CIF)</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="mailto:@item.Email">@Html.DisplayFor(modelItem => item.Email)</a>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Telefono))
                                                {
                                                    <a href="tel:@item.Telefono">@Html.DisplayFor(modelItem => item.Telefono)</a>
                                                }
                                                else
                                                {
                                                    <em class="text-muted">No disponible</em>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@model Facturacion.Models.Entities.Cliente

@{
    ViewData["Title"] = "Detalles del Cliente";
}

<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-user"></i> Detalles del Cliente</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-4">Nombre Completo</dt>
                                <dd class="col-sm-8">
                                    <h5 class="text-primary">@Html.DisplayFor(model => model.Nombre) @Html.DisplayFor(model => model.Apellido)</h5>
                                </dd>
                                
                                <dt class="col-sm-4">Identificación</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.NIF))
                                    {
                                        <span class="badge bg-primary me-2">NIF: @Html.DisplayFor(model => model.NIF)</span>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.CIF))
                                    {
                                        <span class="badge bg-info">CIF: @Html.DisplayFor(model => model.CIF)</span>
                                    }
                                </dd>
                                
                                <dt class="col-sm-4">Dirección</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Direccion)</dd>
                            </dl>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h6 class="card-title">
                                        <i class="fas fa-address-book"></i> Información de Contacto
                                    </h6>
                                    @if (!string.IsNullOrEmpty(Model.Email))
                                    {
                                        <p class="mb-2">
                                            <i class="fas fa-envelope"></i>
                                            <a href="mailto:@Model.Email">@Html.DisplayFor(model => model.Email)</a>
                                        </p>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.Telefono))
                                    {
                                        <p class="mb-0">
                                            <i class="fas fa-phone"></i>
                                            <a href="tel:@Model.Telefono">@Html.DisplayFor(model => model.Telefono)</a>
                                        </p>
                                    }
                                    else
                                    {
                                        <p class="mb-0 text-muted">
                                            <i class="fas fa-phone"></i> No disponible
                                        </p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <hr />
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary me-md-2">
                            <i class="fas fa-arrow-left"></i> Volver a la Lista
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-md-2">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Eliminar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>